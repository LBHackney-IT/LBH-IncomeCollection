  <div class="grid-row">
    <div class="column-full">
      <h1>Letter preview</h1>
      <strong>Template name: </strong><%= @preview[:template][:name] %>

      <% if @preview[:errors].any? %>
        <table class="error">
          <thead>
            <tr>
              <th>Error Field</th>
              <th>Error Message</th>
            </tr>
          </thead>
          <tbody>
            <% @preview[:errors].each do |error| %>
              <tr>
                <td><%= error[:name].humanize %></td>
                <td><%= error[:message].humanize %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class="grid-row">
    <div class="column-full">
      <div class="letter_preview">
        <%= @preview[:preview].html_safe %>
      </div>
    </div>
  </div>

<div class="letter" data-uuid=<%= @preview[:uuid] %>>

  <%= form_tag(send_letter_path, remote: true) do %>
    <%= hidden_field_tag('uuid', @preview[:uuid]) %>
    <%= submit_tag('Confirm and Send', class: 'send_letter_button button',
      data: {
        disable_with: "Sending..."
      })%>
  <% end %>

</div>


<%= link_to "Send All", 'javascript:;', class: "button", onclick: 'submit_send_all()'%>
