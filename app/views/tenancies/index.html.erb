<h2>Your Worktray</h2>
  <% content_for :title do %>Active - Worktray<% end %>

  <%= worktray_tab_link_to("Immediate Actions", worktray_path) %>
  <%= worktray_tab_link_to("Paused", worktray_path(paused: true), :paused) %>
  <%= worktray_tab_link_to("Full Patch", worktray_path(full_patch: true), :full_patch) %>
  <%# <%= worktray_tab_link_to("Upcoming Court Dates", worktray_path(upcoming_court_dates: true), :upcoming_court_dates) %>
  <%# <%= worktray_tab_link_to("Upcoming Evictions", worktray_path(upcoming_evictions: true), :upcoming_evictions) %>

  <% if @user_assigned_tenancies.none? %>
    <h3 class="tenancy_list tenancy_list__no_tenancies">You currently have no assigned cases</h3>

    <div class='other_actions tenancy_list column-align-center'>
      <%= link_to 'Send letters', letters_new_path, class: 'button' %>
      <%= link_to  'View letters', documents_path, class: 'button' %>
    </div>
  <% end %>

<% if !@user_assigned_tenancies.none? %>
  <%= render :partial => 'worktray_table', locals: { tenancies_list: @user_assigned_tenancies } %>
<% end %>

