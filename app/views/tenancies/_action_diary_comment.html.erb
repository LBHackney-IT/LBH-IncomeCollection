<% if action_diary_comment.length > 100 %>
  <%= action_diary_comment.slice!(
    truncate(action_diary_comment, length: 100, omission: '', separator: ' ', escape: false)
  ) %>...
  <details class="govuk-details" data-module="govuk-details">
    <summary class="govuk-details__summary">
      <span class="govuk-details__summary-text">
        Continue reading
      </span>
    </summary>
    <div class="govuk-details__text"><%= action_diary_comment.html_safe %></div>
  </details>
<% else %>
  <%= action_diary_comment.html_safe %>
<% end %>
