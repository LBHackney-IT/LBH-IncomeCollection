<header class="header">
  <div class="wrapper">
    <div class="grid-row" style="padding: 0;">
      <div class="column-two-thirds">
        <a href="/" class="header__logo"></a>
        <div class="header__title">
          <span class="heading-medium">Income Collection</span>
        </div>
      </div>
      <div class="column-third">
        <div class="header__user">
          <% if !current_page?(:search) %>
            <%= link_to(fa_icon('search', text: 'Search'), search_path, {class: 'button-dark-grey', target: '_blank'}) %>
          <%end %>
          <% if logged_in? %>
            <%= current_user.fetch('name') %>
            <%= link_to 'Sign out', logout_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
