<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-xlarge"><%= @tenancy.primary_contact_name %></h1>
  </div>
  <div class="column-one-third">
    <h3 style="padding-top: 15%">Caseworker: George Larry</h3>
  </div>
</div>

<div class="grid-row">
  <div class="column-one-third">
    <ul>
      <li><strong>Reference number:</strong> <%= @tenancy.ref %></li>
      <li><strong>Start date:</strong> <%= format_date(@tenancy.start_date) %></li>
      <li><strong>Payment reference:</strong> <%= @tenancy.payment_ref %></li>
      <li><strong>Tenure:</strong> <%= tenancy_type_name(@tenancy.tenure) %></li>
    </ul>
    <ul>
      <li><strong>Universal Credit:</strong> Need to fetch</li>
      <li><strong>NoSP served:</strong> <%= format_date(@tenancy.nosp_served) %></li>
      <li><strong>NoSP expires:</strong> <%= format_date(@tenancy.nosp_expiry) %></li>
      <li><strong>Court Date:</strong> <%= format_date(@tenancy.court_date) %></li>
      <li><strong>Court Outcome:</strong> <%= court_outcome_for_code(@tenancy.court_outcome) %></li>
      <li><strong>Evicition Date:</strong> <%= format_date(@tenancy.eviction_date) %></li>
      <li><strong>Property type:</strong> Need to fetch </li>
      <li><strong>Number of bedrooms:</strong> <%= @tenancy.display_number_of_bedrooms %></li>
      <li><strong>Last arrears action:</strong> Need to fetch </li>
    </ul>
  </div>

  <div class="column-one-third" style="padding-top: 25px">
  <h2 >Personal Details</h2>
    <h3>Tenancy address</h3>
      <ul class="list">
        <li><%= @tenancy.primary_contact_long_address %></li>
        <li><%= @tenancy.primary_contact_postcode %></li>
      </ul>
    <h3>Correspondence Address</h3>
      <% primary_contact = @tenancy.contacts.find { |t| t[:responsible] } %>
      <% if !primary_contact.nil? %>
      <ul class="list">
        <li><%= @tenancy.contacts[0][:address_line_1] %></li>
        <li><%= @tenancy.contacts[0][:address_line_2] %></li>
        <li><%= @tenancy.contacts[0][:address_line_3] %></li>
        <li><%= @tenancy.contacts[0][:post_code] %></li>
      </ul>
      <% end %>
    </ul>
  </div>

  <div class="column-one-third" style="padding-top: 80px">
  <h3>Contact Details</h3>
  <% @tenancy.contacts.each do |contact| %>
  <ul class="list">
    <% if contact[:responsible] %>
      <li><span class="contact-details-list__responsible">Responsible Tenant</span></li>
    <% end %>
      <li>Title: <%= @tenancy.contacts[0][:title] %></li>
      <li>First Name: <%= @tenancy.contacts[0][:first_name] %></li>
      <li>Last Name: <%= @tenancy.contacts[0][:last_name] %></li>
      <li>Phone: <%= @tenancy.contacts[0][:telephone_1] %></li>
    </ul>
  <% end %>
  </div>
</div>
<hr>
