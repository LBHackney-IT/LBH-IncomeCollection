<div class="grid-row">
  <div class="column-full">
    <h1>Send Letters</h1>
    <%= form_tag(income_collection_letters_path) do %>
      <div class="form-group">
        <label class="govuk-label" for="comment"><strong>Tenancy references</strong></label><br>
        <span class="form-hint">Enter comma separated tenancy references</span>
        <textarea class="form-control form-control-3-3" id="tenancy_refs" name="tenancy_refs" rows="6" required="true"></textarea>
      </div>

      <div class="form-group">
        <label class="form-label" for="sms-template-select"><strong>Select template</strong></label>
        <span class="form-hint">Select a letter template to send from the dropdown list below</span>
        <%= select_tag(:template_id, options_for_select(@letter_templates
                                                          .map { |template| [template.name, template.id] }
                                                        ), id: 'sms-template-select', class:'form-control') %>
      </div>

      <%= submit_tag('Preview', class: 'button') %>
    <% end %>
  </div>
</div>
